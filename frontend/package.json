{
  "name": "converteai-frontend",
  "version": "2.0.0",
  "description": "Modern React frontend for PDF to Word conversion service",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "analyze": "npm run build && npx vite-bundle-analyzer"
  },
  "keywords": [
    "react",
    "pdf",
    "word",
    "conversion",
    "frontend",
    "ui",
    "vite"
  ],
  "author": {
    "name": "Matheus Carvalho",
    "email": "developer@mathaus.dev",
    "url": "https://mathaus.dev"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "axios": "^1.7.9",
    "react-dropzone": "^14.2.9",
    "react-hot-toast": "^2.4.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.456.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.5",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "prettier": "^3.4.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/converteai.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/converteai/issues"
  },
  "homepage": "https://converteai.io"
}